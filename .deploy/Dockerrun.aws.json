{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "stripe-customer-kickstart",
      "image": "dermidgen/stripe-customer-kickstart:%BUILD_NUM%",
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "BRAND",
          "value": "%BRAND%"
        },
        {
          "name": "HOST_PORT",
          "value": "3000"
        },
        {
          "name": "STRIPE_PKEY",
          "value": "%STRIPE_PKEY%"
        },
        {
          "name": "STRIPE_SKEY",
          "value": "%STRIPE_SKEY%"
        }
      ],
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        },
        {
          "hostPort": 443,
          "containerPort": 3000
        }
      ]
    }
  ]
}
